{% extends '@Admin/base.html.twig' %}

{% block h1 %}
    {% if form.vars.value.id is not null %}
        Edit category <small>{{ form.vars.value.categoryName }}</small>
    {% else %}
        Create category
    {% endif %}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active"><a href="{{ path("blog_category_admin_list") }}">Catigories</a></li>
    <li class="active">{% if form.vars.value.id is not null %}Edit{% else %}Create{% endif %} category</li>
{% endblock %}

{% block page_content %}

    {{ form_start(form) }}
    <div class="form-wrapper row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">General Info</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                {{ form_row(form.category_name, {"attr": {"class": "form-control"}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="text-right">
                <a href="{{ path("blog_category_admin_list") }}" class="btn btn-default btn-cancel">Cancel</a>
                {{ form_widget(form.save, {"attr": {"class": "btn btn-success", "style": "margin-left:10px" }}) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/admin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js') }}"></script>
    <script>
        $(function () {
            $(".wysihtml5").wysihtml5();
        });
    </script>
{% endblock %}

{% block styles %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/admin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css') }}">
{% endblock %}