{% extends '@Admin/base.html.twig' %}

{% block page_content %}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Articles</h3>
                    <a href="{{ path('blog_category_admin_create') }}" class="btn btn-success pull-right">Create category</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="userTable" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th style="width: 100px" class="text-center">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.categoryName }}</td>
                                <td class="text-center">
                                    <a href="{{ path('blog_category_admin_edit',{'id':category.id}) }}" class="btn btn-xs
                                    btn-warning">
                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                    </a>
                                    <a href="{{ path('blog_category_admin_delete',{'id':category.id}) }}" class="btn btn-xs
                                    btn-danger">
                                        <i class="fa fa-remove" title="Remove"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/admin/plugins/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bundles/admin/plugins/datatables/dataTables.bootstrap.min.js') }}"></script>
    <script>
        $(function () {
            $('#userTable').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });
    </script>
{% endblock %}
{% block styles %}
    {{ parent() }}
{% endblock %}


