{% extends '@Admin/base.html.twig' %}

{% block page_content %}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Permissions list</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="permTable" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for perm in perms %}
                            <tr>
                                <td>{{ perm.id }}</td>
                                <td>{{ perm.name }}</td>
                                <td>{{ perm.description }}</td>
                            </tr>


                        {% endfor %}
                        </tbody>
                        {#<tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>E-Mail</th>
                            <th>Last Login</th>
                            <th>Roles</th>
                        </tr>
                        </tfoot>#}
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/admin/plugins/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bundles/admin/plugins/datatables/dataTables.bootstrap.min.js') }}"></script>
    <script>
        $(function () {
            $('#permTable').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });
    </script>
{% endblock %}